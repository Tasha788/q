<MTSScene Version="308">
<!-- Viewpoint Experience Technology scene description file.				 -->
<MTSTimeElem Name="mySmoothZoom" Type="MTSZoomView" On="1" PreAnimator="1" 
BaseName="kaluga1912_img/kaluga1912.mzv"
	ImageSize="4457 2782"
	TileSize="256" Overlap="1"
	Zfit="2"
></MTSTimeElem>

	<MTSAction Name="general">
		<MTSSetProperty Target="MTSInstance.instr_detail::clps" Value="clps_val"/>
		<MTSAssignProperty Target="MTSInteractor.sleep_instr::actv" Value="0" />
	</MTSAction>

	<MTSAction Name="ZoomPan">
		<MTSSetProperty Target="mySmoothZoom::DelU" Value="dx" /> 
		<MTSSetProperty Target="mySmoothZoom::DelV" Value="dy" /> 
		<MTSSetProperty Target="mySmoothZoom::Del0" Value="1"  />
		<general clps_val="1" />
	</MTSAction>

	<MTSAction Name="ZoomAnimIn">
		<MTSSetProperty Target="mySmoothZoom::ScrX" Value="x" />
		<MTSSetProperty Target="mySmoothZoom::ScrY" Value="y" />
		<MTSSetProperty Target="mySmoothZoom::IncZ" Value="z" /> 
		<MTSSetProperty Target="mySmoothZoom::TimT" Value="1" />
		<general clps_val="1" />
	</MTSAction>

	<MTSAction Name="ZoomAnimOut">
		<MTSSetProperty Target="mySmoothZoom::IncZ" Value="z" /> 
		<MTSSetProperty Target="mySmoothZoom::TimT" Value="1" />
		<general clps_val="1" />
	</MTSAction>

	<MTSInteractor Name="MTSCameraNavi">
		<RemoveStates /> 
		<MTSHandle Event="MouseLeftDown"	Action="ZoomAnimIn"   z="2"  x="MTSEvent::ucrd" y="MTSEvent::vcrd"/>	
		<MTSHandle Event="MouseRightDown"	Action="ZoomAnimOut"  z="-2" /> 
		<MTSHandle Event="MouseDrag"		Action="ZoomPan" dx="MTSEvent::_dx_" dy="MTSEvent::_dy_"/> 
	</MTSInteractor>
	
	<MTSInteractor Name="cursor_int">
		<MTSHandle Event="MouseMove" Action="MTSSetProperty" Target="MTSScene::crsr" Value="MTSCursor::MTS_Point" /> 
	</MTSInteractor>	
		
<!--****Sharpening Stuff**************************************************-->	
	<MTSAction Name="sharp_action">
		<MTSAssignProperty Target="MTSInstance.sharp::clps" Value="0" /> 
	</MTSAction>
		
	<MTSAction Name="sharp_action2">
		<MTSAssignProperty Target="MTSInstance.sharp::clps" Value="1" /> 
		<PostMessage Message="do_istr" Delay="3" />
	</MTSAction>
	
	<MTSInteractor Name="sleep_instr">
		<MTSHandle Event="do_istr" Action="general" clps_val="0" />
	</MTSInteractor>
	
	<MTSInteractor Name="sharp_inter">	            
		<MTSHandle Event="ZoomViewDownloadStart:mySmoothZoom" Action="sharp_action" />
		<MTSHandle Event="ZoomViewDownloadEnd:mySmoothZoom" Action="sharp_action2"  />
	</MTSInteractor>
			
	
	<MTSInstance Name="widget_1" >
	<MTSInstance Name="sharp"  >
			<LayerData Text="Sharpening Image" Language="English" TextColor="1 1 1" TextSize="14" Font="Arial" Bold="1" ShadowRadius="1" SrcPin=".5 0" DstPin=".5 .02" DstPinRel="1" SrcPinRel="1" AnchorWidget="1" WidgetLine="0" AlwaysVisible="1" />
	</MTSInstance>
	</MTSInstance>
			
	<MTSInstance Name="Instruction" >
	<MTSInstance Name="instr_b" Visible="1" >
		<LayerData Name="instr_text" Text="Instructions" Language="English"  TextColor="1 1 1" TextSize="14" Font="Arial" Bold="1" ShadowRadius="1" SrcPin="0 0" DstPin=".02 .02" DstPinRel="1" SrcPinRel="1" AnchorWidget="1" WidgetLine="0" AlwaysVisible="1" />
		<MTSHandle Event="MouseEnter" Action="general" clps_val="0" />
		<MTSHandle Event="MouseExit" Action="general" clps_val="1" />
  	</MTSInstance>
	</MTSInstance>

	<MTSInstance Name="instr_detail" Collapsed="1" >
	<MTSInstance Name="instr_detail_b" >
		<LayerData Text="Left-click to zoom in.\nRight-click (Macintosh: control-click) to zoom out.\nClick-and-drag to pan." Language="English" TextColor="1 1 1" TextSize="14" Font="Arial" Bold="1" ShadowRadius="1" SrcPin=".5 .5" DstPin=".5 .5" DstPinRel="1" SrcPinRel="1" AnchorWidget="1" WidgetLine="0" AlwaysVisible="1" />
	</MTSInstance>		
	</MTSInstance>

	<MTSInstance Name="widget_2" >
	<MTSInstance Name="copyright"  >
			<LayerData Text="" Language="English" TextColor="1 1 1" TextSize="14" Font="Arial" Bold="1" ShadowRadius="1" SrcPin=".5 1" DstPin=".5 .98" DstPinRel="1" SrcPinRel="1" AnchorWidget="1" WidgetLine="0" AlwaysVisible="1" />
	</MTSInstance>
	</MTSInstance>
			
</MTSScene>
